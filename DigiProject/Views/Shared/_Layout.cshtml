<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:burlywood">
    <div class="navbar navbar-inverse navbar-fixed-top" style="direction:rtl">
        <div class="container" dir="rtl">
            <div class="navbar-header" dir="rtl">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" dir="rtl">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Main Page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="direction:rtl">
                <ul class="nav navbar-nav"  dir="rtl">
                    <li>@Html.ActionLink("Commodities", "Create", "CreateCommodity")</li>
                    <li>@Html.ActionLink("Promotion", "Index", "Promotions")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" dir="rtl">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
