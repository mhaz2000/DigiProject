@using Services.Services
@model IEnumerable<Infrastructure.DtoModels.LaptopDto>

@{
    ViewBag.Title = "Index";
}

<h2 dir="ltr">Laptops</h2>

<div style="direction:ltr">
    @using (Html.BeginForm("Search", "Laptops", FormMethod.Get))
    {
        //the following are search options
        <b> Search Option: </b>
        <text>Name</text> @Html.RadioButton("option", "Name")
        <text> Brand </text> @Html.RadioButton("option", "Brand")
        <text>GPU Company</text> @Html.RadioButton("option", "GPU_Company")
        <text>CPU</text> @Html.RadioButton("option", "CPU")

        <br />

        @Html.TextBox("search", "", new { @class = "form-control", style = "display: unset" })
        <input type="submit" name="submit" value="Search" />
    }
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
    th, tr {
        text-align: center
    }
</style>
<div style="overflow-x: overlay;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AttachmentFile.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remaining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImmediateSending)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LaptopRam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTouchable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScreenSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatteImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAM_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAM_Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScreenResolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU_Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU_Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternalStorage)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.AttachmentImageId != null)
                    {
                        var attachmentImageSrc = new AttachmentFileService().GetAttachmentSourceValue(item.AttachmentImageId);

                        <img src="@attachmentImageSrc" alt="@item.Name" title="@item.Name" style="width:120px; height:80px;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remaining)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImmediateSending)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LaptopRam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsTouchable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScreenSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatteImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RAM_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RAM_Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScreenResolution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPU_Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPU_Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InternalStorage)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
</div>